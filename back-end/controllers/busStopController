const Stops = require("../model/busStop");

// GET all routes
const getStops = async (req, res) => {
    const stops = await Stops.find({});
    res.status(200).json(stops);
}

// GET a specific RouteNo
const findStop  = async (req, res) => {
    const stopNo = req.params.id;
    console.log(stopNo);
    try {
        const stop = await Stops.find({StopNo: stopNo});
        if (!stop) res.status(404).send("No stops found")
        res.status(200).json(stop);
      } catch (error) {
        res.status
      }
}

module.exports = {getStops, findStop};